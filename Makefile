.PHONY: help

help: ## This help.
	@awk 'BEGIN {FS = ":.*?## "} /^[a-zA-Z_-]+:.*?## / {printf "\033[36m%-30s\033[0m %s\n", $$1, $$2}' $(MAKEFILE_LIST)

.DEFAULT_GOAL := help

start:			## Start presentation
	cd presentation && $(MAKE) start-presentation

dev:			## Develop presentation
	cd presentation && $(MAKE) develop-presentation
